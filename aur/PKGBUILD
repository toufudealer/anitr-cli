pkgname=anitr-cli
pkgver=4.3.4
pkgrel=1
pkgdesc="ğŸš€ Terminalde TÃ¼rkÃ§e altyazÄ±lÄ± anime arama ve izleme aracÄ±"
arch=('any')
url="https://github.com/xeyossr/anitr-cli"
license=('GPL3')
depends=('vlc')
makedepends=('go' 'git')

optdepends=(
    'rofi: X11 kullanÄ±cÄ±larÄ± iÃ§in GUI'
